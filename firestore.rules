rules_version = "2";

service cloud.firestore {
  match /databases/{database}/documents {
  
    function belongsTo(userId) {
        return request.auth.uid == userId
    }
    
		match /orders/{orderId}/{document=**} {
      allow read, write;
    }
    match /users/{userId}/{document=**} {
      allow read;
      allow write: if belongsTo(userId);
    }
  }
}